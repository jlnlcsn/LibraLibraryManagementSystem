<Window x:Class="LibraLibraryManagementSystem.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraLibraryManagementSystem"
        mc:Ignorable="d"
        Height="650"
        Width="1000"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" Padding="20">
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Height="550"
                        Width="588" Margin="10,0,0,0">

                <Image Source="/logo.png"
                       Width="200"
                       Height="200"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Left" />

                <TextBlock Text="Welcome to LIBRA!"
                           FontFamily="Montserrat"
                           FontSize="52"
                           FontWeight="Bold"
                           HorizontalAlignment="Left"
                           Margin="0,0,0,5"
                           Foreground="#333333"/>

                <TextBlock Text="Enter your credentials to log in."
                           FontFamily="Montserrat"
                           FontSize="32"
                           Foreground="#888888"
                           HorizontalAlignment="Left"
                           Margin="0,0,0,35" />

                <Grid Margin="0,0,0,15">
                    <Border CornerRadius="25"
                            Background="White"
                            BorderBrush="#DDDDDD"
                            BorderThickness="1"
                            Height="50"/>

                    <TextBox x:Name="txtUsername"
                             FontFamily="Montserrat"
                             FontSize="16"
                             BorderThickness="0"
                             Background="Transparent"
                             Padding="20,0"
                             VerticalAlignment="Center"
                             Foreground="#333333"/>

                    <TextBlock Text="Username"
                               FontFamily="Montserrat"
                               FontSize="14"
                               Foreground="#AAAAAA"
                               Margin="20,0"
                               IsHitTestVisible="False"
                               VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=txtUsername}" Value="">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <Grid Margin="0,0,0,30">
                    <Border CornerRadius="25"
                            Background="White"
                            BorderBrush="#DDDDDD"
                            BorderThickness="1"
                            Height="50"/>

                    <PasswordBox x:Name="txtPassword"
                                 FontFamily="Montserrat"
                                 FontSize="14"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Padding="20,0"
                                 VerticalAlignment="Center"
                                 Foreground="#333333"
                                 PasswordChanged="txtPassword_PasswordChanged"/>

                    <TextBlock x:Name="tbPasswordPlaceholder"
                               Text="Password"
                               FontFamily="Montserrat"
                               FontSize="14"
                               Foreground="#AAAAAA"
                               Margin="20,0"
                               IsHitTestVisible="False"
                               VerticalAlignment="Center">
                    </TextBlock>
                </Grid>
                <Button Content="Log In"
                        x:Name="btnLogin"
                        FontFamily="Montserrat"
                        FontWeight="SemiBold"
                        FontSize="16"
                        Foreground="White"
                        Background="#FFE4A750"
                        BorderThickness="0"
                        Height="44"
                        Cursor="Hand"
                        Click="btnLogin_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="25">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#D88C55" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

            </StackPanel>
        </Border>

        <Grid Grid.Column="1">

            <Grid.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="#6FB1DC" Offset="0.0" />
                    <GradientStop Color="#4A90C2" Offset="1.0" />
                </LinearGradientBrush>
            </Grid.Background>

            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Right"
                        Margin="0,0,10,10">
                <TextBlock
                           FontFamily="Montserrat"
                           FontSize="12"
                           FontWeight="Medium"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="0,0,15,0" Width="171" TextAlignment="Right" ><Run Text="Magalang Christian Ecumenical"/><LineBreak/><Run Text=" School Inc."/></TextBlock>

                <Image Source="/logo.png"
                       Width="35"
                       Height="35" />
            </StackPanel>

            <StackPanel Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,10,0" Height="30" Orientation="Horizontal" FlowDirection="RightToLeft" Grid.RowSpan="2">
                <Button x:Name="btnClose" Style="{StaticResource IconButtonsStyle}" Content="{DynamicResource close}" Click="btnClose_Click" Tag="IsCloseButton" Foreground="#FF959595"/>
                <Button x:Name="btnRestore" Margin="5,0" Click="btnRestore_Click" Foreground="#FF959595">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource IconButtonsStyle}">
                            <Setter Property="Content" Value="{DynamicResource maximize}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=home, Path=WindowState}" Value="Maximized">
                                    <Setter Property="Content" Value="{DynamicResource restore}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="btnMinimize" Style="{DynamicResource IconButtonsStyle}" Content="{DynamicResource minimize}" Click="btnMinimize_Click" Foreground="#FF959595"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
