<Page x:Class="LibraLibraryManagementSystem.UserPages.UserTransactions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraLibraryManagementSystem.UserPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserTransactions"
      Background="White">

    <Page.Resources>
        <Style x:Key="StatusCellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
            <Setter Property="TextBlock.VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}" 
                    BorderThickness="0" 
                    CornerRadius="3"
                    SnapsToDevicePixels="True">
                            <ContentPresenter VerticalAlignment="Center" 
                                  HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="ACCEPTED">
                    <Setter Property="Background" Value="#A5D6A7"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="DECLINED">
                    <Setter Property="Background" Value="#EF9A9A"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="PENDING">
                    <Setter Property="Background" Value="#FFCC80"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="CANCELLED">
                    <Setter Property="Background" Value="#808080"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WrapCellStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="4,2"/>
        </Style>

        <!-- DATAGRID GLOBAL STYLE -->
        <Style TargetType="DataGrid">
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="BorderThickness" Value="0"/>

            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="BorderBrush" Value="#333"/>
                        <Setter Property="BorderThickness" Value="0 0 0 1"/>
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="6"/>
                        <Setter Property="Foreground" Value="#333"/>
                        <Setter Property="Background" Value="White"/>
                    </Style>
                </Setter.Value>
            </Setter>

            <Setter Property="RowStyle">
                <Setter.Value>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Margin" Value="0,2"/>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#EEEEEE"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#D5D5D5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>

            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="6"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- BUTTON STYLE -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Height" Value="34"/>
            <Setter Property="MinWidth" Value="70"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                            CornerRadius="8"
                            Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="355*"/>
            <ColumnDefinition Width="236*"/>
            <ColumnDefinition Width="169*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>



        <!-- 0 — BORROWED BOOKS HEADER -->
        <TextBlock Grid.Row="0"
               Text="BOOK RESERVATIONS"
               FontSize="22"
               FontWeight="Bold"
               Margin="0,10,0,5" Grid.ColumnSpan="3"/>

        <!-- 1 — BORROWED BOOKS SEARCH BAR -->
        <Grid Grid.Row="1" Margin="6,6,6,6" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                Background="DarkCyan"
                CornerRadius="8"
                Padding="6"
                HorizontalAlignment="Stretch">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="SearchBoxBorrowed"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="White"
                         FontSize="14"
                         VerticalContentAlignment="Center"
                         Padding="0"/>

                    <TextBlock x:Name="SearchPlaceholderBorrowed"
                           Text="Search Borrowed Books..."
                           FontSize="13"
                           Foreground="#B0E0E6"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"
                           Panel.ZIndex="-1"/>

                    <Image Grid.Column="1"
                       Source="/Resources/search_icon.png"
                       Width="18" Height="18"
                       Margin="6 0 0 0"
                       VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>

        <!-- 2 — BORROWED BOOKS DATAGRID -->
        <DataGrid x:Name="dgReservations" Grid.Row="2"
              Margin="0,0,0,10"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              CanUserDeleteRows="False"
              IsReadOnly="True"
              SelectionMode="Single" Grid.ColumnSpan="3">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Transaction ID" Binding="{Binding TransactionID}" Width="*" ElementStyle="{StaticResource WrapCellStyle}"/>
                <DataGridTextColumn Header="Book ID" Binding="{Binding BookID}" Width="*" ElementStyle="{StaticResource WrapCellStyle}"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*" ElementStyle="{StaticResource WrapCellStyle}"/>
                <DataGridTextColumn Header="School ID" Binding="{Binding SchoolID}" Width="*" ElementStyle="{StaticResource WrapCellStyle}"/>
                <DataGridTextColumn Header="Borrower's Name" Binding="{Binding BorrowerName}" Width="*" ElementStyle="{StaticResource WrapCellStyle}"/>
                <DataGridTextColumn Header="Date Borrowed" Binding="{Binding DateBorrowed, StringFormat={}{0:MM/dd/yyyy}}" Width="*" ElementStyle="{StaticResource WrapCellStyle}"/>
                <DataGridTextColumn Header="Due Date" Binding="{Binding DueDate, StringFormat={}{0:MM/dd/yyyy}}" Width="*" ElementStyle="{StaticResource WrapCellStyle}"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*" ElementStyle="{StaticResource WrapCellStyle}" CellStyle="{StaticResource StatusCellStyle}" />
            </DataGrid.Columns>
        </DataGrid>


        <!-- 3 — RESERVATIONS HEADER -->
        <TextBlock Grid.Row="3"
               Text="TRANSACTION HISTORY"
               FontSize="22"
               FontWeight="Bold"
               Margin="0,10,0,5" Grid.ColumnSpan="3"/>

        <!-- 4 — RESERVATIONS SEARCH BAR -->
        <Grid Grid.Row="4" Margin="6,6,6,6" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
        Background="DarkCyan"
        CornerRadius="8"
        Padding="6"
        HorizontalAlignment="Stretch">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="SearchBoxReservations"
                 Background="Transparent"
                 BorderThickness="0"
                 Foreground="White"
                 FontSize="14"
                 VerticalContentAlignment="Center"
                 Padding="0"/>

                    <TextBlock x:Name="SearchPlaceholderReservations"
                   Text="Search Transaction History..."
                   FontSize="13"
                   Foreground="#B0E0E6"
                   VerticalAlignment="Center"
                   IsHitTestVisible="False"
                   Panel.ZIndex="-1"/>

                    <Image Grid.Column="1"
               Source="/Resources/search_icon.png"
               Width="18" Height="18"
               Margin="6 0 0 0"
               VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>


        <!-- 5 — RESERVATIONS DATAGRID -->
        <DataGrid x:Name="dgHistory" Grid.Row="5"
              Margin="0,0,0,10"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              CanUserDeleteRows="False"
              IsReadOnly="True"
              SelectionMode="Single" Grid.ColumnSpan="3">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Transaction ID" Binding="{Binding TransactionID}" Width="*" ElementStyle="{StaticResource WrapCellStyle}"/>
                <DataGridTextColumn Header="Book ID" Binding="{Binding BookID}" Width="*" ElementStyle="{StaticResource WrapCellStyle}"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*" ElementStyle="{StaticResource WrapCellStyle}"/>
                <DataGridTextColumn Header="Borrower's Name" Binding="{Binding BorrowerName}" Width="*" ElementStyle="{StaticResource WrapCellStyle}"/>
                <DataGridTextColumn Header="School ID" Binding="{Binding SchoolID}" Width="*" ElementStyle="{StaticResource WrapCellStyle}"/>
                <DataGridTextColumn Header="Date Borrowed" Binding="{Binding DateBorrowed, StringFormat={}{0:MM/dd/yyyy}}" Width="*" ElementStyle="{StaticResource WrapCellStyle}"/>
                <DataGridTextColumn Header="Due Date" Binding="{Binding DueDate, StringFormat={}{0:MM/dd/yyyy}}" Width="*" ElementStyle="{StaticResource WrapCellStyle}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 6 — BUTTONS IN GRID (5 COLUMNS) -->
        <Grid Grid.Row="6" Margin="0 10 0 0" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnDeclineReservation" Grid.Column="3"
                Style="{StaticResource RoundedButton}"
                Background="#808080"
                Foreground="White"
                Content="Cancel Reservation"
                Margin="5"/>
        </Grid>

    </Grid>
</Page>