<Page x:Class="LibraLibraryManagementSystem.Controls.BtnAddUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraLibraryManagementSystem.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="800"
      Title="BtnAddUser"
      FontFamily="Montserrat"
      Background="White">

    <Page.Resources>
        <!-- Compact Rounded Button -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.95"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Compact Rounded TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D0D6DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="0"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Compact Rounded PasswordBox -->
        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D0D6DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="0"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <!-- Compact layout sized for 800x450 -->
    <Grid x:Name="ScaleRoot">
        <Grid.LayoutTransform>
            <ScaleTransform x:Name="PageScale"/>
        </Grid.LayoutTransform>


        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Row 0: Title -->
            <TextBlock Text="ADD A USER" 
                   FontWeight="Bold"
                   FontSize="24"
                   Margin="0,0,0,12"/>

            <!-- Row 1: Form Fields (3 columns: 25%, 50%, 25%) -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- COLUMN 0: Labels (25%) -->
                <StackPanel Grid.Column="0" 
                        Margin="20,0,0,0"
                        VerticalAlignment="Center">

                    <TextBlock FontWeight="SemiBold" 
                           FontSize="13"
                           Height="40"
                           VerticalAlignment="Center">
                    School ID <Run Text="*" Foreground="Red"/>
                    </TextBlock>

                    <TextBlock FontWeight="SemiBold" 
                           FontSize="13"
                           Height="40"
                           VerticalAlignment="Center">
                    Name <Run Text="*" Foreground="Red"/>
                    </TextBlock>

                    <TextBlock FontWeight="SemiBold" 
                           FontSize="13"
                           Height="40"
                           VerticalAlignment="Center">
                    Username <Run Text="*" Foreground="Red"/>
                    </TextBlock>

                    <TextBlock FontWeight="SemiBold" 
                           FontSize="13"
                           Height="40"
                           VerticalAlignment="Center">
                    Contact No. <Run Text="*" Foreground="Red"/>
                    </TextBlock>

                    <TextBlock FontWeight="SemiBold" 
                           FontSize="13"
                           Height="40"
                           VerticalAlignment="Center">
                    Grade and Section <Run Text="*" Foreground="Red"/>
                    </TextBlock>

                    <TextBlock FontWeight="SemiBold" 
                           FontSize="13"
                           Height="40"
                           VerticalAlignment="Center">
                    Password  <Run Text="*" Foreground="Red"/>
                    </TextBlock>

                </StackPanel>

                <!-- COLUMN 1: TextBoxes (50%) -->
                <StackPanel Grid.Column="1" 
                        VerticalAlignment="Center">

                    <TextBox Name="txtSchoolID" 
                         Margin="0,0,0,10"
                         IsReadOnly="True"/>

                    <TextBox Name="txtName" 
                         Margin="0,0,0,10"/>

                    <TextBox Name="txtEmail"
                         Margin="0,0,0,10"/>

                    <TextBox Name="txtContactNo"
                         Margin="0,0,0,10"/>

                    <TextBox Name="txtGradeSection"
                         Margin="0,0,0,10"/>

                    <PasswordBox Name="txtPassword"
                             Margin="0,0,0,10"/>

                </StackPanel>

                <!-- COLUMN 2: User Type and Radio Buttons (25%) -->
                <StackPanel Grid.Column="2" 
                        Margin="30,45,0,0"
                        VerticalAlignment="Top">

                    <TextBlock FontWeight="SemiBold" 
                           FontSize="13"
                           Margin="0,0,0,10">
                    User Type <Run Text="*" Foreground="Red"/>
                    </TextBlock>

                    <RadioButton Name="rbStandard" 
                             Content="Student" 
                             IsChecked="False" 
                             FontSize="13"
                             Margin="0,5,0,5"/>

                    <RadioButton Name="rbAdmin" 
                             Content="Admin" 
                             FontSize="13"
                             IsChecked="False" 
                             Margin="0,5,0,5"/>

                </StackPanel>
            </Grid>

            <!-- Row 2: Action Buttons -->
            <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
                <Button Content="CANCEL"
                    Name="btnCancel"
                    Background="#555"
                    Style="{StaticResource RoundedButton}"
                    Click="BtnCancel_Click"/>
                <Button Content="ADD"
                    Name="btnAdd"
                    Background="#57B894"
                    Style="{StaticResource RoundedButton}"
                    Margin="10,0,0,0"
                    Click="BtnAdd_Click"/>

            </StackPanel>
        </Grid>
    </Grid>
</Page>