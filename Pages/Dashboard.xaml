<Page x:Class="LibraLibraryManagementSystem.Pages.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="Dashboard"
      FontFamily="Montserrat"
      Background="White"
      SizeChanged="OnSizeChanged"
      Loaded="OnLoaded">

    <Page.Resources>

        <!-- GLOBAL DATAGRID STYLE -->
        <Style TargetType="DataGrid">
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="BorderThickness" Value="0"/>

            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="BorderBrush" Value="#333"/>
                        <Setter Property="BorderThickness" Value="0 0 0 1"/>
                        <Setter Property="Padding" Value="6"/>
                        <Setter Property="Foreground" Value="#333"/>
                        <Setter Property="Background" Value="White"/>
                    </Style>
                </Setter.Value>
            </Setter>

            <Setter Property="RowStyle">
                <Setter.Value>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Margin" Value="0,2"/>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#EEEEEE"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#D5D5D5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>

            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="6"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- WRAP TEXT -->
        <Style x:Key="WrapCellStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="4,2"/>
        </Style>

    </Page.Resources>


    <!-- MAIN GRID LAYOUT WITH SCALE TRANSFORM -->
    <Grid x:Name="ScaleRoot" Margin="20">
        <Grid.LayoutTransform>
            <ScaleTransform x:Name="PageScale"/>
        </Grid.LayoutTransform>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <!-- stat blocks -->
            <RowDefinition Height="2*" />
            <!-- table -->
        </Grid.RowDefinitions>


        <!-- ===================== TOP STAT BLOCKS ===================== -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- BLOCK 1 -->
            <Border Grid.Column="0"
                    Background="#1F6DB2"
                    CornerRadius="10"
                    Margin="10"
                    Padding="20">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="TotalBooksLabel"
                               Text="0"
                               FontSize="48"
                               Foreground="White"
                               FontWeight="Bold"
                               TextAlignment="Center"
                               Loaded="TotalBooksLabel_Loaded"/>
                    <TextBlock Text="Total No. of Books"
                               FontSize="16"
                               Foreground="White"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- BLOCK 2 -->
            <Border Grid.Column="1"
                    Background="#36A3DA"
                    CornerRadius="10"
                    Margin="10"
                    Padding="20">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="CurrentBooksLabel"
                               Text="0"
                               FontSize="48"
                               Foreground="White"
                               FontWeight="Bold"
                               TextAlignment="Center"
                               Loaded="CurrentBooksLabel_Loaded"/>
                    <TextBlock Text="Current No. of Available Books"
                               FontSize="16"
                               Foreground="White"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- BLOCK 3 -->
            <Border Grid.Column="2"
                    Background="#E8B655"
                    CornerRadius="10"
                    Margin="10"
                    Padding="20">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="BorrowedBooksLabel"
                               Text="0"
                               FontSize="48"
                               Foreground="White"
                               FontWeight="Bold"
                               TextAlignment="Center"
                               Loaded="BorrowedBooksLabel_Loaded"/>
                    <TextBlock Text="Current No. of Borrowed Books"
                               FontSize="16"
                               Foreground="White"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- BLOCK 4 -->
            <Border Grid.Column="3"
                    Background="#D6602F"
                    CornerRadius="10"
                    Margin="10"
                    Padding="20">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="BooksToShelveLabel"
                               Text="0"
                               FontSize="48"
                               Foreground="White"
                               FontWeight="Bold"
                               TextAlignment="Center"
                               Loaded="BooksToShelveLabel_Loaded"/>
                    <TextBlock Text="No. of Books to be Shelved"
                               FontSize="16"
                               Foreground="White"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </Grid>


        <!-- ===================== TABLE SECTION ===================== -->
        <StackPanel Grid.Row="1" Margin="10">

            <TextBlock x:Name="DueTodayTitle"
                       Text="DUE TODAY "
                       FontSize="24"
                       FontWeight="Bold"
                       Loaded="DueTodayTitle_Loaded"/>

            <Separator Margin="0,10,0,15"/>

            <DataGrid x:Name="DueTodayDataGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      Margin="0">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Book ID"
                                        Binding="{Binding BookID}"
                                        Width="*"
                                        ElementStyle="{StaticResource WrapCellStyle}"/>

                    <DataGridTextColumn Header="Book Title"
                                        Binding="{Binding BookTitle}"
                                        Width="2*"
                                        ElementStyle="{StaticResource WrapCellStyle}"/>

                    <DataGridTextColumn Header="Borrower"
                                        Binding="{Binding Borrower}"
                                        Width="2*"
                                        ElementStyle="{StaticResource WrapCellStyle}"/>

                    <DataGridTextColumn Header="Contact"
                                        Binding="{Binding Contact}"
                                        Width="*"
                                        ElementStyle="{StaticResource WrapCellStyle}"/>
                </DataGrid.Columns>

            </DataGrid>

        </StackPanel>

    </Grid>

</Page>