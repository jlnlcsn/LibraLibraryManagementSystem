<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Background Colors -->
    <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#FFFFFF"/>
    <LinearGradientBrush x:Key="SecondaryBackgroundColor" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#4D92AA" Offset="0.0" />
        <GradientStop Color="#2980BC" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Primary Colors -->
    <SolidColorBrush x:Key="PrimaryBlueColor" Color="#2980BC"/>

    <!-- Typograhy Colors -->
    <SolidColorBrush x:Key="PrimaryTextColor" Color="#2A2626"/>
    <SolidColorBrush x:Key="TextSecondaryColor" Color="#FFFFFF"/>

    <!-- Icon Colors -->
    <SolidColorBrush x:Key="PrimaryIconColor" Color="White"/>
    <SolidColorBrush x:Key="SecondaryIconColor" Color="#8A94A6"/>
    <SolidColorBrush x:Key="TertiarIconyColor" Color="#4B5D78"/>
    <SolidColorBrush x:Key="FourthIconColor" Color="#323B4B"/>

    <SolidColorBrush x:Key="btnClose" Color="#F72626"/>
    
</ResourceDictionary>